<Project Sdk="NScript.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Sunlight.Framework.Test</RootNamespace>
    <AssemblyName>Sunlight.Framework.Test</AssemblyName>
    <NScriptToolSetPath>..\..\..\NScriptToolSet</NScriptToolSetPath>
    <OutputPath>$(NScriptToolSetPath)\lib\</OutputPath>
    <NScriptBinPath>$(NScriptToolSetPath)\bin\$(CompilerNetFramework)</NScriptBinPath>
    <GenerateJs>True</GenerateJs>
    <PluginConfig>PluginConfig.xml</PluginConfig>
    <JsOutputPath>..\TestWebApplication\GeneratedScripts</JsOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="mscorlib" Version="1.0.0" />
    <PackageReference Include="Sunlight.Framework" Version="1.0.0" />
    <PackageReference Include="System.Web.Html" Version="1.0.0" />
    <PackageReference Include="System.Web" Version="1.0.0" />
    <PackageReference Include="SunlightUnit" Version="1.0.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="PluginConfig.xml">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>
  <PropertyGroup>
    <PostBuildEvent>copy *.js ..\..\..\TestWebApplication\GeneratedScripts
		copy *.map ..\..\..\TestWebApplication\GeneratedScripts
		copy *.ashx ..\..\..\TestWebApplication\GeneratedScripts
	</PostBuildEvent>
  </PropertyGroup>
</Project>