<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>$(FrameworkTFM)</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Sunlight.Framework.UI</RootNamespace>
    <AssemblyName>Sunlight.Framework.UI</AssemblyName>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <!-- <CscToolPath>$(NScriptToolsetDir)\bin\$(CompilerNetFramework)\</CscToolPath> -->
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
    <CscToolExe>$(NScriptToolsetDir)\bin\$(CompilerNetFramework)\csc.exe</CscToolExe>
    <PackageId>NScript.Sunlight.Framework.UI</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NoStdLib>true</NoStdLib>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../mscorlib/NScript.MsCorlib.csproj" />
    <ProjectReference Include="../Sunlight.Framework/Sunlight.Framework.csproj" />
    <ProjectReference Include="../System.Web.Html/System.Web.Html.csproj" />
  </ItemGroup>
    <ItemGroup>
      <None Include="$(OutputPath)$(AssemblyName).pdb">
        <Pack>true</Pack>
        <PackagePath>lib\$(TargetFramework)</PackagePath>
      </None>
    </ItemGroup>
</Project>