<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseAppHost>false</UseAppHost>
    <AssemblyName>SunlightTestAdapter.TestAdapter</AssemblyName>
    <OutputPath>$(NScriptToolsetDir)/TestStuff</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TestPlatform.ObjectModel" Version="17.2.0" />
    <PackageReference Include="PuppeteerSharp" Version="7.0.0" PrivateAssets="all" />
    <Reference Include="$(NScriptToolsetDir)/lib/SunlightUnit.dll" />
  </ItemGroup>

</Project>
